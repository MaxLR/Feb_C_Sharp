@{
    ViewData["Title"] = "Welcome";
}

@model Person

<div class="row justify-content-center">
    <div class="col-lg-6 col-sm-12">
        <div class="card mt-3 shadow">
            <div class="card-body">
                <h1>Welcome!</h1>
                <hr>
                <form asp-action="ProcessName" asp-controller="Home" method="POST">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">What is your name?</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="form-text text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">ENTER</button>
                </form>
            </div>
        </div>
    </div>
</div>
