@{
    ViewData["Title"] = "Welcome";
}

@model Guest

<div class="row justify-content-center">
    <div class="col-lg-6 col-sm-12">
        <div class="card mt-5">
            <div class="card-body">
                <h1>Welcome!</h1>
                <form asp-action="ProcessName" asp-controller="Home" method="POST">
                    <div class="mb-3">
                        <label asp-for="GuestName" class="form-label">What is your name?</label>
                        <input asp-for="GuestName" type="text" class="form-control" />
                        <span asp-validation-for="GuestName" class="form-text text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary">ENTER</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
